<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top_ranks_tone_card"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@color/topCardTransparent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_ranks_tone_card_rank"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:textColor="#3E36BE"
                android:textAppearance="?android:attr/textAppearanceLarge"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_ranks_tone_card_score"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="#D24836"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_ranks_tone_card_text"
            android:ellipsize="end"
            android:textColor="#444"
            android:layout_margin="5dp"
            android:maxLines="8"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
